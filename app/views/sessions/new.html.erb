	<% if flash[:alert] %>
		<p id="notice"><%= flash[:alert] %></p>
	<% end %>
	<div align="center">
	<div class="col-md-4">
	<%= form_tag({:action=>:new},{:class=>"form-signin",:method=>:post}) do %>
		<h2 class="form-signin-heading">Войдите пожалуйста</h2>
		<%= text_field_tag :login,nil,:class=>"form-control",:placeholder=> "Логин",:required=>true,:autofocus=>true %>
	    <%= password_field_tag :password, nil,:class=>"form-control",:placeholder=>"Пароль",:required=>true %>
		<br>
		<%= submit_tag "Войти", :class=>"btn btn-lg btn-primary btn-block" %>
	<% end %>
	</div>
	</div>
